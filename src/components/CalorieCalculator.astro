<div class="calc">
  <input id="w" type="number" placeholder="Вес (кг)" />
  <input id="h" type="number" placeholder="Рост (см)" />
  <input id="a" type="number" placeholder="Возраст" />
  <button class="btn" id="calcBtn">Рассчитать</button>
  <div class="result" id="res"></div>
</div>

<script>
  document.getElementById("calcBtn").addEventListener("click", () => {
    const w = Number(document.getElementById("w").value);
    const h = Number(document.getElementById("h").value);
    const a = Number(document.getElementById("a").value);
    const r = document.getElementById("res");

    if (!w || !h || !a) {
      r.textContent = "Заполни все поля";
      return;
    }

    const calories = Math.round(
      (10 * w + 6.25 * h - 5 * a + 5) * 1.55
    );

    r.textContent = `≈ ${calories} ккал / день`;
  });
</script>
